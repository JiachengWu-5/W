---
import { Icon } from "astro-icon/components";
---

<!-- 固定右下角显示回到顶部按钮 -->
<div class="back-to-top-wrapper fixed right-6 bottom-6 z-50">
    <div id="back-to-top-btn" class="back-to-top-btn flex items-center rounded-2xl overflow-hidden transition" onclick="backToTop()">
        <button aria-label="Back to Top" class="btn-card h-[3.75rem] w-[3.75rem]">
            <Icon name="material-symbols:keyboard-arrow-up-rounded" class="mx-auto"></Icon>
        </button>
    </div>
</div>

<style lang="stylus">
.back-to-top-wrapper
    width: 3.75rem
    height: 3.75rem
    position: fixed
    right: 1.5rem
    bottom: 1.5rem
    z-index: 50
    pointer-events: auto

.back-to-top-btn
    color: var(--primary)
    font-size: 2.25rem
    font-weight: bold
    border: none
    opacity: 1
    cursor: pointer
    pointer-events: auto
    i
        font-size: 1.75rem
    &:active
      transform: scale(0.95)
</style>

<script is:raw is:inline>
function backToTop() {
    window.scroll({ top: 0, behavior: 'smooth' });
}
</script>
